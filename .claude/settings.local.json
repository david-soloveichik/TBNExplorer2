{
  "permissions": {
    "allow": [
      "Bash(pytest:*)",
      "Bash(tbnexplorer2:*)",
      "Bash(git add:*)",
      "Bash(python -m pytest tests/ --collect-only -q)",
      "Bash(python -m pytest tests/test_parser.py::TestTBNParser::test_monomer_name_with_spaces_error -xvs)",
      "Bash(python -m pytest tests/test_parser.py -xvs)",
      "Bash(python -m pytest tests/test_polymer.py -xvs)",
      "Bash(python:*)",
      "Bash(cat:*)",
      "Bash(ruff check:*)",
      "Bash(grep:*)",
      "Bash(ruff format:*)"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "acceptEdits",
    "additionalDirectories": [
      "/tmp"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/ntfy-notifier.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/ntfy-notifier.sh"
          }
        ]
      }
    ]
  }
}